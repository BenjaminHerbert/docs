{
    "app_name": "swarmdocs",
    "services": [
        {
            "service_name": "docs-service",
            "components": [
                {
                    "component_name": "docs-auth",
                    "image": "registry.private.giantswarm.io/docs-auth:0.2.0",
                    "ports": [ "80/tcp" ],
                    "dependencies": [
                        {
                            "name": "upstream",
                            "port": 8000
                        },
                        {
                            "name": "sitesearch",
                            "port": 9200
                        }
                    ],
                    "domains": {
                        "$domain1_name": "80"
                    }
                },
                {
                    "component_name": "upstream",
                    "image": "registry.private.giantswarm.io/docs:0.15.0",
                    "ports": [ "8000/tcp" ]
                },
                {
                    "component_name": "sitesearch",
                    "image": "registry.private.giantswarm.io/sitesearch:0.1.0",
                    "ports": [
                        "9200/tcp",
                        "9300/tcp"
                    ]
                }
            ]
        }
    ]
}
