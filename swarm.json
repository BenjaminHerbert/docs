{
    "app_name": "swarmdocs",
    "services": [
        {
            "service_name": "docs-service",
            "components": [
                {
                    "component_name": "docs-auth",
                    "image": "$docsauth_image",
                    "ports": [ "80/tcp" ],
                    "dependencies": [
                        {
                            "name": "upstream",
                            "port": 8000
                        },
                        {
                            "name": "sitesearch",
                            "port": 9200
                        }
                    ],
                    "domains": {
                        "$domain1_name": "80"
                    }
                },
                {
                    "component_name": "upstream",
                    "image": "$docs_image",
                    "ports": [ "8000/tcp" ],
                    "dependencies": [
                        {
                            "name": "sitesearch",
                            "port": 9200
                        }
                    ]
                },
                {
                    "component_name": "sitesearch",
                    "image": "$sitesearch_image",
                    "ports": [ "9200/tcp" ]
                }
            ]
        }
    ]
}
