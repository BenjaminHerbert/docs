{
    "app_name": "docs",
    "services": [
        {
            "service_name": "proxy",
            "components": [
                {
                    "component_name": "proxy",
                    "image": "$proxy_image",
                    "ports": [ "80/tcp" ],
                    "dependencies": [
                        {
                            "name": "content-master/content",
                            "port": 80,
                            "alias": "docsmaster"
                        },
                        {
                            "name": "content-slave/content",
                            "port": 80,
                            "alias": "docsslave"
                        },
                        {
                            "name": "sitesearch/sitesearch",
                            "port": 9200,
                            "alias": "sitesearch"
                        }
                    ],
                    "domains": {
                        "$domain_name": "80"
                    }
                }
            ]
        },
        {
            "service_name": "content-master",
            "components": [
                {
                    "component_name": "content",
                    "image": "$content_image",
                    "ports": [ "80/tcp" ],
                    "env": {
                        "BASE_URL": "http://$domain_name"
                    },
                    "dependencies": [
                        {
                            "name": "sitesearch/sitesearch",
                            "port": 9200,
                            "alias": "sitesearch"
                        }
                    ]
                }
            ]
        },
        {
            "service_name": "content-slave",
            "components": [
                {
                    "component_name": "content",
                    "image": "$content_image",
                    "ports": [ "80/tcp" ],
                    "env": {
                        "BASE_URL": "http://$domain_name"
                    }
                }
            ]
        },
        {
            "service_name": "sitesearch",
            "components": [
                {
                    "component_name": "sitesearch",
                    "image": "$sitesearch_image",
                    "ports": [ "9200/tcp" ]
                }
            ]
        }
    ]
}
